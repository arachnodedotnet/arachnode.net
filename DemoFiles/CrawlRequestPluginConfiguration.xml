		<FullTextIndexType key="image/x-icon" value=".ico" />
		<FullTextIndexType key="image/gif" value=".gif" />
		<FullTextIndexType key="image/png" value=".png" />
		<FullTextIndexType key="image/jpg" value=".jpg" />
		<FullTextIndexType key="image/jpeg" value=".jpeg" />
		<FullTextIndexType key="text/css" value=".txt" />
		<FullTextIndexType key="image/vnd.microsoft.icon" value=".ico" />
